.block
  .secondary-navigation
  .content
    - if params[:search].blank? || @kyus_searched.blank?
      #search_error
        Sorry no matching results for keyword '#{params[:search]}'

    - else
      %h2.title                
        All articles containing keyword '#{params[:search]}'
      .inner
        %table.table
          %tr
            %th= t("web-app-theme.created_at", default: "")
            %th
              = t("activerecord.attributes.kyu_entry.subject", default: t("activerecord.labels.subject", default: "Subject"))
            %th= t("web-app-theme.created_at", default: "Date")
            %th= t("web-app-theme.created_at", default: "Contributor")

          - @kyus_searched.each do |kyu_entry|
            %tr{class: cycle("odd", "even")}
              - if kyu_entry.user
                %td= image_tag avatar_url(kyu_entry.user, 45)
                %td= kyu_link(kyu_entry)
                %td= timeago_date_format(kyu_entry.created_at)
                %td= kyu_entry.user.display_name

- content_for :sidebar, render(partial: 'sidebar', locals: {tag_cloud_hash: @tag_cloud_hash, users: @users})
