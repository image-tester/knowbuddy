.block
  .secondary-navigation
    %ul.wat-cf
      %li.first
        %a{ href: "#"}
  .content
    %br
    .profile
      = form_for @user, html: { class: :form, id: "user_edit_form" } do |f|
        .group
          = image_tag avatar_url(@user, 45)
        .group
          = f.label :name, 'Name', class: :label
          = f.text_field :name, class: "text_field validate[required] text-input"
        .group
          = f.label :current_password, 'Current Password', class: :label
          = f.password_field :current_password, class: "text_field validate[required] text-input"
        .group
          = f.label :password, 'Password', class: :label
          = f.password_field :password, class: "text_field"
          %span.description * Enter only if u need to change your password.
        .group
          = f.label :password_confirmation, 'Re-enter Password', class: :label
          = f.password_field :password_confirmation, class: "text_field validate[equals[user_password]]"
        .group.navform.wat-cf
          %button.button{type: "submit"}
            = image_tag("web-app-theme/icons/tick.png", alt: "#{t("web-app-theme.save", default: "Save")}")
            = t("web-app-theme.save", default: "Save")
          %span.text_button_padding= t("web-app-theme.or", default: "or")
          = link_to t("web-app-theme.cancel", default: "Cancel"), posts_path, class: "text_button_padding link_button"
