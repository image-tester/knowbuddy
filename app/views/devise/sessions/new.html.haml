%h1 KnowBuddy
.block#block-login
  %h2 Sign in
  .content.login
    = render partial: "error_message", flash: flash
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "formIDRegi", class: "form login" }) do |f|
      .group.wat-cf
        .left= f.label :email, class: "label right"
        .right= f.text_field :email, class: "validate[funcCall[checkEmail]]", id: "emailvalidate"
      .group.wat-cf
        .left= f.label :password, class: "label right"
        .right= f.password_field :password, class: "validate[required] text-input"
      - if devise_mapping.rememberable?
        .group.wat-cf
          .right
            = f.check_box :remember_me, class: "checkbox"
            = f.label :remember_me, class: "checkbox"
      .group.wat-cf
        .right
          %button.button{ type: "submit" }
            = image_tag "web-app-theme/icons/key.png"
            Login
    = render partial: "devise/shared/links"

