.block
  .secondary-navigation
  .content
    #new_kyu

    %h2.title
      = t("web-app-theme.all", default: "All")
      Posts
    .inner
      %table.table
        %tr
          %th= t("web-app-theme.created_at", default: "")
          %th
            = t("activerecord.attributes.kyu_entry.subject", default: t("activerecord.labels.subject", default: "Subject"))
          %th= t("web-app-theme.created_at", default: "Date")
          %th= t("web-app-theme.created_at", default: "Contributor")
        - @kyu_entries.each do |kyu_entry|
          = render "entries", { kyu_entry: kyu_entry }
      .actions-bar.wat-cf
        .actions
        = paginate @kyu_entries, param_name: :page_2
.block2
  .block
    .new
      %h2.title
        Activities
      %table
        = render "activities"
    .bottom
      = link_to_next_page @activities, 'See more' , remote: true , id: "load_more_link", param_name: :page_3

- content_for :sidebar, render(partial: 'sidebar',
locals: {tag_cloud_hash: @tag_cloud_hash, users: @users })
